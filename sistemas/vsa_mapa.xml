<?xml version="1.0" encoding="iso-8859-1"?>

<chartApp
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://sage.web.chartApp"
      appName="Poke Monitor">

   <!-- chartMap representa um grafico que pode conter varios plots -->
   <chartMap
      config="vsa_config.xml"
      data="vsa_data.xml"
      type="Organon">

      <map-plot id="G1xG2" plot="plot_B" group="G1xG2">

         <map-annot marker="pontoOper" anot="SOP" />

         <map-range axis="mw" range="G1" />
         <map-range axis="mw" range="G2" />

         <map id="m1" curve="c1" serie="s1" />
         <map id="m2" curve="c2" serie="s2" />
         <map id="m3" curve="c3" serie="s3" />
         <map id="m4" curve="c4" serie="s4" />
         <map id="m5" curve="c5" serie="s5" />

      </map-plot>

      <map-plot id="G1xG3" plot="plot_B" group="G1xG3">

         <map-annot marker="pontoOper" anot="SOP" />

         <map-range axis="mw" range="G1" />
         <map-range axis="mw" range="G3" />

         <map id="m1" curve="c1" serie="s1" />
         <map id="m2" curve="c2" serie="s2" />
         <map id="m3" curve="c3" serie="s3" />
         <map id="m4" curve="c4" serie="s4" />
         <map id="m5" curve="c5" serie="s5" />

      </map-plot>

      <map-plot id="G2xG3" plot="plot_B" group="G2xG3">

         <map-annot marker="pontoOper" anot="SOP" />

         <map-range axis="mw" range="G2" />
         <map-range axis="mw" range="G3" />

         <map id="m1" curve="c1" serie="s1" />
         <map id="m2" curve="c2" serie="s2" />
         <map id="m3" curve="c3" serie="s3" />
         <map id="m4" curve="c4" serie="s4" />
         <map id="m5" curve="c5" serie="s5" />

      </map-plot>

   </chartMap>

   <chartView>

      <mapView lines="2" colummns="2" label="Gráficos">
         <view gridX="0" gridY="0" gridWidth="1" gridHeight="1" type="SimpleChart" action="none" mapPlotId="G1xG2" />
         <view gridX="1" gridY="0" gridWidth="1" gridHeight="1" type="SimpleChart" action="none" mapPlotId="G1xG3" />
         <view gridX="0" gridY="1" gridWidth="1" gridHeight="1" type="SimpleChart" action="none" mapPlotId="G2xG3" />
         <view gridX="1" gridY="1" gridWidth="1" gridHeight="1" type="infoPanel"   action="none" mapPlotId="pnInfo" />
      </mapView>

      <mapView lines="1" colummns="1" label="G1xG2">
         <view gridX="0" gridY="0" gridWidth="1" gridHeight="1" type="ControlChart" action="none" mapPlotId="G1xG2" />
      </mapView>

      <mapView lines="1" colummns="1" label="G1xG3">
         <view gridX="0" gridY="0" gridWidth="1" gridHeight="1" type="ControlChart" action="PokeClick" mapPlotId="G1xG3" />
      </mapView>

      <mapView lines="1" colummns="1" label="G2xG3">
         <view gridX="0" gridY="0" gridWidth="1" gridHeight="1" type="ControlChart" action="PokeClick" mapPlotId="G2xG3" />
      </mapView>

   </chartView>

   <chartNotify>

      <entity>rseg</entity>
      <attribute>h_arqvc_unix</attribute>
      <offset>0</offset>

   </chartNotify>

</chartApp>
